generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoices {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  value       Int
  description String
  status      Status
}

enum Status {
  OPEN
  PAID
  VOID
  UNCOLLECTIBLE
}
